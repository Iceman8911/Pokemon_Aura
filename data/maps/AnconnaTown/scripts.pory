script AnconnaTown_EventScript_LittleGirl {
	lockall
	if(var(ANCONNA_TOWN_DISCOVERED_MYSTERIOUS_PEOPLE) == 1){
		msgbox(format("{COLOR RED}{SHADOW LIGHT_RED}I saw 3 strangers enter the forest. I wonder what they're doing there."), 2)
		waitmessage
	}
	else{
		msgbox(LittleGirl, 2) 
		waitmessage
	}
	releaseall
	end
}

text LittleGirl {
	"{COLOR RED}{SHADOW LIGHT_RED}Oooh, I really want a small cute Pokémon."
}

